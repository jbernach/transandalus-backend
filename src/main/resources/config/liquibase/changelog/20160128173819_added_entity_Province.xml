<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity Province.
    -->
    <changeSet id="20160128173819" author="jhipster">
        <createTable tableName="province">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="code" type="varchar(16)">
                <constraints nullable="false" />
            </column>
            
            <column name="i18n_name" type="bigint">
            	<constraints nullable="false"/>
            </column>     
                   
            <column name="i18n_description" type="bigint">
            	<constraints nullable="false"/>
            </column>
            
            <column name="image" type="mediumblob" />
            <column name="image_content_type" type="varchar(50)">
                
            </column>
            
            <!-- jhipster-needle-liquibase-add-column - Jhipster will add columns here, do not remove-->
        </createTable>
        
        <addForeignKeyConstraint baseColumnNames="i18n_name"
                                 baseTableName="province"
                                 constraintName="fk_name"
                                 referencedColumnNames="id_i18n"
                                 referencedTableName="i18n"/>
                                 
        <addForeignKeyConstraint baseColumnNames="i18n_description"
                                 baseTableName="province"
                                 constraintName="fk_description"
                                 referencedColumnNames="id_i18n"
                                 referencedTableName="i18n"/>
    </changeSet>
</databaseChangeLog>
