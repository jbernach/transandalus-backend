<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd"
         name="CM1"
         updateCheck="false"
         maxBytesLocalHeap="16M">

    <!--
      This is a default configuration, it is re-configured by the CacheConfiguration Spring Bean, using the
      properties from the resources/config/*.yml files.
    -->

    <diskStore path="java.io.tmpdir"/>

    <defaultCache
            eternal="false"
            overflowToDisk="false"
            />

    <cache name="org.transandalus.backend.domain.User"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="org.transandalus.backend.domain.Authority"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="org.transandalus.backend.domain.User.authorities"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="org.transandalus.backend.domain.PersistentToken"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="org.transandalus.backend.domain.User.persistentTokens"
           timeToLiveSeconds="3600">
    </cache>
    
    <cache name="org.transandalus.backend.domain.SocialUserConnection"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="org.transandalus.backend.domain.Article"
           timeToLiveSeconds="3600">
    </cache>
    
    <cache name="org.transandalus.backend.domain.Category"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="org.transandalus.backend.domain.I18n"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="org.transandalus.backend.domain.Menu"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="org.transandalus.backend.domain.MenuItem"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="org.transandalus.backend.domain.Province"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="org.transandalus.backend.domain.Stage"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="org.transandalus.backend.domain.Track"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="org.transandalus.backend.domain.Translation"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="org.transandalus.backend.domain.I18n.translations"
           timeToLiveSeconds="3600">
    </cache>
</ehcache>
